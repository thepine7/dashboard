	<profiles>
	    <profile>
	        <id>local</id>
	        <properties>
	            <env>local</env>
	        </properties>
	    </profile>
	    <profile>
	        <id>dev</id>
	        <properties>
	            <env>dev</env>
	        </properties>
	    </profile>
	    <profile>
	        <id>test</id>
	        <properties>
	            <env>test</env>
	        </properties>
	    </profile>
