package com.andrew.hnt.api.service;

import java.util.Map;

/**
 * Device 등록 및 장치 전송을 위한 서비스
 * - Device 등록 요청 처리
 * - 기존 소유자 데이터 삭제
 * - 새 사용자에게 장치 등록
 * - MQTT 응답 전송
 */
public interface DeviceRegistrationService {
    
    /**
     * Device 등록 프로토콜 처리
     * @param userId 사용자 ID
     * @param model 모델 종류 (TC, HTC, WIO, EIO 등)
     * @param mac MAC 주소
     * @return 등록 성공 여부
     */
    boolean processDeviceRegistration(String userId, String model, String mac);
    
    /**
     * 장치 전송 처리 (기존 소유자 → 새 소유자)
     * @param newUserId 새 소유자 ID
     * @param model 모델 종류
     * @param mac MAC 주소
     * @return 전송 성공 여부
     */
    boolean transferDevice(String newUserId, String model, String mac);
    
    /**
     * 기존 소유자 데이터 완전 삭제
     * @param mac MAC 주소
     * @return 삭제 성공 여부
     */
    boolean deleteExistingOwnerData(String mac);
}

