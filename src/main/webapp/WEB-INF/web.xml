<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <!-- 1) 인코딩 필터: 모든 요청/응답을 UTF-8로 강제 -->
  <filter>
    <filter-name>characterEncodingFilter</filter-name>
    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
    <init-param>
      <param-name>forceRequestEncoding</param-name>
      <param-value>true</param-value>
    </init-param>
    <init-param>
      <param-name>forceResponseEncoding</param-name>
      <param-value>true</param-value>
    </init-param>
    <!-- Spring 5.2+에서는 forceEncoding이 사라지고 위 파라미터로 분리됨 -->
  </filter>
  <filter-mapping>
    <filter-name>characterEncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
    <dispatcher>FORWARD</dispatcher>
    <dispatcher>INCLUDE</dispatcher>
  </filter-mapping>

  <!-- Spring Web 중복 문제 해결을 위한 절대 순서 지정 -->
  <absolute-ordering>
    <name>spring_web</name>
  </absolute-ordering>

  <!-- Spring Framework 버전 충돌 방지를 위한 추가 설정 -->
  <context-param>
    <param-name>spring.profiles.active</param-name>
    <param-value>default</param-value>
  </context-param>

  <!-- 세션 설정 (크로스 사이트/서브도메인 지원) -->
  <session-config>
    <session-timeout>30</session-timeout>
    <cookie-config>
      <name>JSESSIONID</name>
      <!-- domain 설정 제거 - Spring Boot application.yml에서 관리 -->
      <path>/</path>
      <http-only>true</http-only>
      <secure>false</secure>  <!-- HTTPS 사용 시 true로 변경 -->
      <!-- HTTPS 환경에서는 SameSite=None; Secure 설정 필요 -->
      <max-age>1800</max-age>
      <comment>HnT Sensor API Session Cookie</comment>
    </cookie-config>
  </session-config>

  <!-- JSP 설정 -->
  <jsp-config>
    <jsp-property-group>
      <url-pattern>*.jsp</url-pattern>
      <page-encoding>UTF-8</page-encoding>
    </jsp-property-group>
  </jsp-config>

  <!-- 에러 페이지 설정 -->
  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/jsp/error.jsp</location>
  </error-page>
  
  <error-page>
    <error-code>500</error-code>
    <location>/WEB-INF/jsp/error.jsp</location>
  </error-page>
  
  <error-page>
    <exception-type>java.lang.Exception</exception-type>
    <location>/WEB-INF/jsp/error.jsp</location>
  </error-page>

</web-app>
